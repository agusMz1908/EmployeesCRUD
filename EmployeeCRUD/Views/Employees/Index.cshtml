@model List<EmployeeCRUD.Models.Domain.Employee>
@{
}

<h1 class="text-center pb-5">Employees List</h1>

<table class="table table-dark table-hover table-bordered text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Day Of Birth</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id"><i class="fa-solid fa-circle-info"></i></a></td>
            </tr>    
        }
    </tbody>
</table>